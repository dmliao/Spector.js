{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
